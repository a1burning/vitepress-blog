{
    "compilerOptions": {
        "module": "esnext",
        "target": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "jsx": "preserve",
        "lib": ["esnext", "dom", "dom.iterable"],
        "types": ["node", "vue"],
    },
    "include": ["/docs/**/*"],
    "exclude": [
        "**/node_modules/**",
        "**/dist/**",
        "template",
        "bin",
        "docs/snippets",
        "scripts"
    ]
}
